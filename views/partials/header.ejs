<nav class="navbar navbar-expand-lg navbar-dark bg-dkcyan">
	<div class="container-fluid">
		<a class="navbar-brand" href="/home">
			<%= pageTitle %>
		</a>
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#headerNavbar"
            aria-controls="headerNavbar" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="headerNavbar">
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">
				<% availablePages.forEach(availablePage => {
                  const hrefValue = availablePage.replace(/\s+/g, ''); // two-word to one.
                  const lowercaseFirstLetter = hrefValue.charAt(0).toLowerCase() + hrefValue.slice(1);
                %>
				<li class="nav-item">
					<a class="nav-link active"
						<%= lowercaseFirstLetter === page.toLowerCase() ? 'fw-bold' : '' %>" aria-current="page" href="/<%= lowercaseFirstLetter %>">
						<%= availablePage %>
					</a>
				</li>
				<% }) %>
			</ul>
			<div class="navbar-text" id="weatherDisplay">
				<div class="weather-icon">
					<i id="weatherIcon" class="" data-bs-toggle="tooltip" data-bs-placement="top" title=""></i>
				</div>
				<p class="temperature" id="temperature"></p>
			</div>


		</div>
	</nav>
