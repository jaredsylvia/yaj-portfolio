<script>var users = <%- JSON.stringify(users) %>;</script>
<script src="/js/users.js"></script>
<table id="userTable" class="display table table-bordered table-striped table-hover table-responsive table-dkcyan">
    <thead>
        <tr>
            <th>ID</th>
            <th>Login Name</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% users.forEach(user => { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.loginName %></td>
                <td><%= user.email %></td>
                <td>
                    <input type="checkbox"
                           class="isAdminCheckbox"
                           data-user-id="<%= user.id %>"
                           <%= user.isAdmin ? 'checked' : '' %>
                    >
                </td>
                <td>
                    <button class="deleteUserBtn"
                            data-user-id="<%= user.id %>">
                        Delete
                    </button>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>