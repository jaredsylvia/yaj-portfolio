<script src="/js/userForms.js"></script>
<div class="create-account">
    <h2 class="mb-4">Create Account</h2>
    <form action="#" method="post" id="createAccountForm">
        <div class="mb-3">
            <label for="loginName" class="form-label">Login Name</label>
            <input type="text" class="form-control" id="loginName" name="loginName" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Create Account</button>
    </form>
</div>
